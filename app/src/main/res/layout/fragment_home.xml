<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="-250dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="10dp">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <Spinner
                android:id="@+id/my_spinner"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="280dp"
                android:baselineAligned="false" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="248dp"
        android:layout_height="166dp"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <NumberPicker
            android:id="@+id/horasPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            tools:visibility="visible" />

        <NumberPicker
            android:id="@+id/minutosPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            tools:visibility="visible" />

        <NumberPicker
            android:id="@+id/horarioPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            tools:visibility="visible" />

    </LinearLayout>


    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggleButtonGroup"
        android:layout_width="266dp"
        android:layout_height="61dp"
        android:layout_marginTop="-50dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.422"
        app:singleSelection="true">

        <Button
            android:id="@+id/Lunes"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            app:icon="@drawable/baseline_360_24"
            tools:layout_editor_absoluteX="136dp"
            tools:layout_editor_absoluteY="120dp" />

        <Button
            android:id="@+id/Martes"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            app:icon="@drawable/baseline_air_24"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="225dp" />

        <Button
            android:id="@+id/Miercoles"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            app:icon="@drawable/baseline_airplane_ticket_24"
            tools:layout_editor_absoluteX="136dp"
            tools:layout_editor_absoluteY="326dp" />

        <Button
            android:id="@+id/Jueves"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            app:icon="@drawable/baseline_alarm_on_24"
            tools:layout_editor_absoluteX="142dp"
            tools:layout_editor_absoluteY="506dp" />

        <Button
            android:id="@+id/Viernes"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            app:icon="@drawable/baseline_anchor_24"
            tools:layout_editor_absoluteX="133dp"
            tools:layout_editor_absoluteY="39dp" />

        <Button
            android:id="@+id/Sabado"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            app:icon="@drawable/baseline_android_24"
            tools:layout_editor_absoluteX="139dp"
            tools:layout_editor_absoluteY="424dp" />
    </com.google.android.material.button.MaterialButtonToggleGroup>


</androidx.constraintlayout.widget.ConstraintLayout>